<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="1.7.0" client="site" method="install">
	<name>Youtube User's Videos</name>
	<author>Mert Emin Kalender</author>
	<creationDate>March 2012</creationDate>
	<copyright>Copyright (C)2012 Mert Emin Kalender</copyright>
	<license>GNU General Public License version 2 or later</license>
	<authorEmail>merteminkalender@gmail.com</authorEmail>
	<authorUrl>ug.bcc.bilkent.edu.tr/~m_kalender/</authorUrl>
	<version>0.1</version>
	<description>A module to show youtube user's videos</description>
	<files>
		<filename module="mod_youtubevideo">mod_youtubevideo.php</filename>
		<filename>helper.php</filename>
		<filename>index.html</filename>
		<filename>mod_youtubevideo.xml</filename>
		<folder>assets</folder>
		<folder>helpers</folder>
		<folder>tmpl</folder>
	</files>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="username" type="text" default="" label="Youtube username" description="Enter your Youtube username" />
			</fieldset>
		</fields>
	</config>
</extension>
